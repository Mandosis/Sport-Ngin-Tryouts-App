div.container-fluid
  h1(class="text-center") Tryout Information
  
  form(role="form")
    div(class="form-group")
      label(for="title") Tryout Title
      input(class="form-control" type="text" name="title" placeholder="Enter Tryout Title" ng-model="tryout.title")
    
    div(class="form-group")
      label(for="tryoutDate") Date
      input(class="form-control" type="Date" name="date" placeholder="placeholder for datepicker" ng-model="tryout.date")
    
    
    div(class="form-group" ng-repeat="categ in input.categories")
      label(for="categ" ng-show="$first") Score Categories
      div
        input(class="form-control" type="text" ng-model="categ.field" placeholder="Enter score category")
        button(class="btn btn-xs" ng-show="!$first")
          i(class="fa fa-minus")
      button(class="btn btn-sm center-block" ng-show="$last" ng-click="input.addFields()")
        i(class="fa fa-2x fa-plus")

    input(type="button" class="btn btn-md" ng-click="input.saveInfo()" value="Save" title="Save")
    input(type="submit" class="btn btn-md" ng-click="input.submitInfo()" value="Save and Continue" title="Submit")
