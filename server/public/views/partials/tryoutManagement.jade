div(ui-content-for="modals")
  div(class="modal modal-overlay" ui-if="deleteModal" ui-state="deleteModal")
    div.modal-dialog
      div.modal-content
        div.modal-header
          button(class="close" ui-turn-off="deleteModal") &times;
          h4.modal-title Delete Tryout
        
        div.modal-body
          p Removing this tryout will delete it perminantly. Are you sure you would like to continue?
            
        div.modal-footer
          button(ui-turn-off="deleteModal" class="btn sportBtn") Cancel
          button(ui-turn-off="deleteModal" ng-click="home.deleteTryout(home.tryoutToDelete)" class="btn btn-danger") Delete


div.container-fluid
h1(class="text-center") Tryout Management
p(class="text-center") Upcoming Tryouts
table.table.table-striped
  thead
      tr
        th Name
        th Date
        th Time
        th Guest Code
        th Review
        th
          i(class="fa fa-trash")
  tbody
      tr(ng-repeat="tryout in home.tryouts.val track by $index")
        td {{tryout.title}}
        td {{tryout.dateString}}
        td {{tryout.time}}
        td 
          button(ng-if="!tryout.code" class="btn btn-success" ng-click="home.generateGuestCode(tryout)") Get Code
          span(ng-if="tryout.code") {{tryout.code}}
        td
          button(class="btn" ng-click="home.reviewTryout(tryout)") Review
        td
          button(ui-turn-on="deleteModal" class="btn" ng-click="home.tryoutToDelete = tryout")
            i(class="fa fa-trash")
  a(href="/archives") Archives

button(class="btn btn-primary" ng-click="home.createNew()") Create new Tryout
