div.container-fluid
  
  if guest
    h1(class="text-center"){{ home.tryouts.val.title }}
    p.text-center 
      span(class="fa fa-calendar-o fa-icon-group" aria-hidden="true")
      {{ review.displayTryout.val.dateString }} |
      span(class="fa fa-clock-o fa-icon-group" aria-hidden="true")
      {{ review.displayTryout.val.time }}
    p Scoring categories: 
      span(ng-repeat="categ in home.tryouts.val.categories")
        span.label.label-success {{ categ.field }}{{$last ? '' : ($index == home.tryouts.val.categories.length-2) ? ', and ' : ', '}}
    div(class="row")
      h5(class="col-xs-9") Players
      h5(class="col-xs-2 text-center") Total Score
    ul.list
      li(ng-repeat="player in home.tryouts.val.players track by $index")
        div(class="item" ng-click="home.reviewPlayer(player)")
          p(class="col-xs-3") # {{player.jerseyNum}}
          
          p(class="col-xs-7") 
          div(class="col-xs-2")
            span(ng-if="!player.total") --
            span(ng-if="player.total")  {{player.total}}

  else
    h1(class="text-center"){{ review.displayTryout.val.title }}
      a
        span(class="fa fa-pencil-square-o title-icon" aria-hidden="true" ng-click="review.editTryout()")


    p.text-center 
      span(class="fa fa-calendar-o fa-icon-group" aria-hidden="true")
      {{ review.displayTryout.val.dateString }} |
      span(class="fa fa-clock-o fa-icon-group" aria-hidden="true")
      {{ review.displayTryout.val.time }}
    p Scoring categories: 
      span(ng-repeat="categ in review.displayTryout.val.categories")
        span.label.label-success {{ categ.field }}{{$last ? '' : ($index == review.displayTryout.val.categories.length-2) ? ', and ' : ', '}}
    
    
    ul.list
      li(ng-repeat="player in review.displayTryout.val.players track by $index")
        div(class="item" ng-click="review.reviewPlayer(player)")
          p(class="col-xs-3") # {{player.jerseyNum}}
          
          p(class="col-xs-7") {{player.profiles.first_name}} {{player.profiles.last_name}}
          div(class="col-xs-2")
            span(ng-if="!player.total") --
            span(ng-if="player.total") {{player.total}}
            
