div.container-fluid
  
  if guest
    h3(class="text-center") Tryout: {{ home.tryouts.val.title }}

    p {{ home.tryouts.val.dateString }} @ {{ home.tryouts.val.time }}
    p Scoring categories: 
      span(ng-repeat="categ in home.tryouts.val.categories")
        span {{ categ.field }}{{$last ? '' : ($index == home.tryouts.val.categories.length-2) ? ', and ' : ', '}}
    
    h5 Players
    div(ng-repeat="player in home.tryouts.val.players track by $index")
      div(class="row")
        p(class="col-md-1") # {{player.jerseyNum}}
        
        p(class="col-md-4") {{player.profiles.first_name}} {{player.profiles.last_name}}
        div(class="col-md-1")
          button(class="btn btn-primary" ng-click="home.reviewPlayer(player)") Score
        p(class="col-md-4") Total : 
          span(ng-if="!player.total") --
          span(ng-if="player.total") {{player.total}}

  else
    h3(class="text-center") Tryout: {{ review.displayTryout.val.title }}

    button(class="btn btn-md" ng-click="review.editTryout()") Edit Tryout
    p {{ review.displayTryout.val.dateString }} @ {{ review.displayTryout.val.time }}
    p Scoring categories: 
      span(ng-repeat="categ in review.displayTryout.val.categories")
        span {{ categ.field }}{{$last ? '' : ($index == review.displayTryout.val.categories.length-2) ? ', and ' : ', '}}
    
    h5 Players
    div(ng-repeat="player in review.displayTryout.val.players track by $index")
      div(class="row")
        p(class="col-md-1") # {{player.jerseyNum}}
        
        p(class="col-md-4") {{player.profiles.first_name}} {{player.profiles.last_name}}
        div(class="col-md-1")
          button(class="btn btn-primary" ng-click="review.reviewPlayer(player)") Score
        p(class="col-md-4") Total : 
          span(ng-if="!player.total") --
          span(ng-if="player.total") {{player.total}}
